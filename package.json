{
  "name": "terd",
  "version": "0.1.0",
  "main": "./build/main.js",
  "private": true,
  "description": "Contracted terminal for Win users.",
  "author": "Luncert",
  "scripts": {
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "watch": "webpack --watch",
    "build": "webpack --config webpack.config.js",
    "electron": "electron .",
    "rebuild-node-pty": "electron-rebuild -f -w /node_modules/node-pty -m ./",
    "postinstall": "webpack --config-name terd && electron-builder install-app-deps && npm run rebuild-node-pty",
    "dist": "electron-builder --win --x64 node-gyp-rebuild"
  },
  "dependencies": {
    "@types/react-motion": "^0.0.29",
    "chalk": "^3.0.0",
    "gulp": "^4.0.2",
    "iconv-lite": "^0.5.1",
    "jquery": "^3.4.1",
    "node-pty": "^0.9.0",
    "open": "^7.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-motion": "^0.5.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "typescript": "^3.7.4",
    "uuid": "^3.3.3",
    "webpack": "^4.41.5",
    "xterm": "^4.3.0",
    "xterm-addon-ligatures": "^0.2.1",
    "xterm-addon-web-links": "^0.2.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jest": "^24.0.25",
    "@types/jquery": "^3.3.31",
    "@types/node": "^13.1.6",
    "@types/open": "^6.2.1",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/uuid": "^3.4.6",
    "electron": "^7.2.4",
    "concurrently": "^5.0.2",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "electron-builder": "^22.2.0",
    "electron-packager": "^14.2.0",
    "electron-rebuild": "^1.8.8",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "node-loader": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.2",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "url-loader": "^3.0.0",
    "webpack-cli": "^3.3.10"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "org.luncert.Terd",
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "installerIcon": "./public/favicon.ico",
      "uninstallerIcon": "./public/favicon.ico",
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "./public/favicon.ico"
    },
    "files": [
      "build",
      "node_modules"
    ],
    "npmRebuild": false
  }
}
