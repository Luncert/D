{
  "compileOnSave": false,
  "compilerOptions": {
    "strictNullChecks": false,
    "target": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "src/main"
  ]
}